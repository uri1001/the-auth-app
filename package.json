{
    "name": "the-node-passport-app",
    "version": "0.1.0",
    "description": "Authentication & Authorization Node App Project With Passport",
    "author": "Oriol Rodríguez Setó <uri1001@pm.me>",
    "license": "MIT",
    "main": "src/index.ts",
    "type": "module",
    "homepage": "https://github.com/uri1001/the-node-passport-app#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/uri1001/the-node-passport-app"
    },
    "bugs": "https://github.com/uri1001/the-node-passport-app/issues",
    "contributors": [
        "uri1001 <uri1001@pm.me>"
    ],
    "scripts": {
        "build": "tsc",
        "clean": "rm -rf dist",
        "clean:pwsh": "@powershell if(test-path dist) {rmdir -r dist}",
        "format": "eslint src/**/*.ts --fix",
        "launch": "node ./dist/index.js",
        "lint": "eslint . --config .eslintrc.json",
        "lint:fix": "eslint . --fix --config .eslintrc.json",
        "prestart": "npm run clean && npm run build",
        "prestart:pwsh": "@powershell npm run clean:pwsh && npm run build",
        "setup": "npm i && cp .env.example .env",
        "start": "node ./dist/index.js",
        "start:pwsh": "@powershell node ./dist/index.js",
        "start:docker": "docker compose up --build",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
        "@types/lowdb": "^1.0.15",
        "axios": "^1.7.2",
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.4.5",
        "evm-networks": "^0.2.0",
        "express": "^4.19.2",
        "express-session": "^1.18.0",
        "jsonwebtoken": "^9.0.2",
        "lowdb": "^7.0.1",
        "morgan": "^1.10.0",
        "openid-client": "^5.6.5",
        "passport": "^0.7.0",
        "passport-custom": "^1.1.1",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "qrcode": "^1.5.3"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.18.0",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/morgan": "^1.9.9",
        "@types/node": "^18.19.34",
        "@types/passport-jwt": "^3.0.13",
        "@types/passport-local": "^1.0.38",
        "@types/qrcode": "^1.5.5",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-config-standard-with-typescript": "^34.0.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.2.0",
        "prettier": "^2.8.8",
        "prettier-plugin-organize-imports": "^3.2.4",
        "typescript": "^5.4.5"
    },
